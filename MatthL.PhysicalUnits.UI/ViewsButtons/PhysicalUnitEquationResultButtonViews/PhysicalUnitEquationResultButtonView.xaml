<UserControl x:Class="MatthL.PhysicalUnits.UI.ViewsButtons.PhysicalUnitEquationResultButtonViews.PhysicalUnitEquationResultButtonView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MatthL.PhysicalUnits.UI.ViewsButtons.PhysicalUnitEquationResultButtonViews"
                         xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:popups="clr-namespace:MatthL.WPF.Essentials.SmartPopups;assembly=MatthL.WPF.Essentials.SmartPopups" xmlns:physicalunitequationresultviews="clr-namespace:MatthL.PhysicalUnits.UI.Views.PhysicalUnitEquationResultViews"
             mc:Ignorable="d"
             d:DesignHeight="30" d:DesignWidth="200" x:Name="Root">
    <UserControl.Resources>
        <ResourceDictionary>
            <DropShadowEffect x:Key="DropShadowEffect"
                          ShadowDepth="3"
                          Direction="315"
                          Color="Black"
                          Opacity="0.3"
                          BlurRadius="5" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MatthL.WPF.Essentials.Styles;component/StyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Button x:Name="UnitButton"
                Click="UnitButton_Click"
                ToolTip="{Binding UnitTooltip}"
                Padding="8,2"
                Style="{StaticResource BaseButton}"
                HorizontalContentAlignment="Stretch">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <iconPacks:PackIconModern Kind="CellFunction" HorizontalAlignment="Left" />

                <TextBlock Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="{Binding ButtonText, ElementName=Root}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedUnit, ElementName=Root}" Value="{x:Null}">
                                    <Setter Property="Text" Value="Sélectionner..." />
                                    <Setter Property="FontStyle" Value="Italic" />
                                    <Setter Property="Foreground" Value="Gray" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </Button>

        <popups:SmartPopup x:Name="SelectorPopup"
                           PlacementTarget="{Binding ElementName=UnitButton}"
                           TargetControl="{Binding ElementName=UnitButton}"
                           Placement="Top"
                           AllowsTransparency="True"
                           IsOpen="{Binding IsPopupOpen, Mode=TwoWay}">
            <Border Style="{StaticResource LightTitledPanelStyle}"
                    Background="{StaticResource BackgroundBrush.LightGray}"
                    CornerRadius="3"
                    Padding="5"
                    Effect="{StaticResource DropShadowEffect}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Affichage des suggestions d'unités basées sur l'équation -->
                    <physicalunitequationresultviews:PhysicalUnitEquationResultView x:Name="EquationResultView"
                                                        Grid.Row="0"
                                                        Width="600"
                                                        EquationTerms="{Binding EquationTerms, ElementName=Root}"
                                                        SelectedUnit="{Binding SelectedUnit, ElementName=Root, Mode=TwoWay}"
                                                        MaxSuggestions="{Binding MaxSuggestions, ElementName=Root}" />

                    <!-- Boutons d'action -->
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0,5,0,0">
                        <Button x:Name="ClearButton"
                                Content="Effacer"
                                Padding="8,2"
                                Margin="0,0,5,0"
                                Click="ClearButton_Click" />
                        <Button x:Name="CloseButton"
                                Content="Fermer"
                                Padding="8,2"
                                Click="CloseButton_Click" />
                    </StackPanel>
                </Grid>
            </Border>
        </popups:SmartPopup>
    </Grid>
</UserControl>