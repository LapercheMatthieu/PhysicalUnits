<UserControl x:Class="MatthL.PhysicalUnits.UI.Views.PhysicalUnitEquationResultView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MatthL.PhysicalUnits.UI.Views"
             xmlns:boolean="clr-namespace:MatthL.WPF.Essentials.Converters;assembly=MatthL.WPF.Essentials.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MatthL.WPF.Essentials.Styles;component/StyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <boolean:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <boolean:BoolToInvisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <!-- Style pour la ComboBox des suggestions -->
            <Style x:Key="SuggestionComboBoxStyle" TargetType="ComboBox">
                <Setter Property="Margin" Value="5" />
                <Setter Property="Padding" Value="8,4" />
                <Setter Property="MinWidth" Value="200" />
            </Style>

            <!-- DataTemplate pour les suggestions dans la ComboBox -->
            <DataTemplate x:Key="SuggestionItemTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Symbole de l'unité -->
                    <TextBlock Grid.Column="0"
                               Text="{Binding Unit}"
                               FontWeight="Bold"
                               Margin="0,0,10,0"
                               VerticalAlignment="Center" />

                    <!-- Nom de l'unité -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding Unit.Name}"
                               FontStyle="Italic"
                               VerticalAlignment="Center" />

                    <!-- Score de pertinence -->
                    <Border Grid.Column="2"
                            CornerRadius="10"
                            Padding="5,2"
                            Margin="5,0,0,0"
                            Background="#E6F0FF">
                        <TextBlock Text="{Binding RelevanceScore, StringFormat='{}{0:F1}'}"
                                   FontSize="10"
                                   Foreground="#2053C4" />
                    </Border>
                </Grid>
            </DataTemplate>

            <!-- Style pour le panneau d'explication -->
            <Style x:Key="ExplanationBorderStyle" TargetType="Border">
                <Setter Property="Background" Value="#F5F8FF" />
                <Setter Property="BorderBrush" Value="#D0D8E8" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="Margin" Value="5" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- En-tête avec la formule dimensionnelle -->
        <Border Grid.Row="0"
                Style="{StaticResource ExplanationBorderStyle}"
                Background="#E8EFFF"
                Margin="5,5,5,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Formule : "
                           FontWeight="Bold"
                           VerticalAlignment="Center" />

                <TextBlock Grid.Column="1"
                           Text="{Binding EquationFormula}"
                           FontFamily="Consolas"
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="5,0,0,0" />
                <CheckBox Grid.Column="2"
                          Content="Explications"
                          IsChecked="{Binding ShowExplanations}"
                          VerticalAlignment="Center"
                          Margin="10,0,0,0" />
            </Grid>
        </Border>

        <!-- Sélecteur des suggestions -->
        <Grid Grid.Row="1" Margin="5">

            <ListBox
                      ItemsSource="{Binding Suggestions}"
                      SelectedItem="{Binding SelectedSuggestion, Mode=TwoWay}"
                      ItemTemplate="{StaticResource SuggestionItemTemplate}"
                      SelectionMode="Single"
                        MaxHeight="200"
                      HorizontalAlignment="Stretch">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>

        <!-- Panneau d'explication -->
        <Border Grid.Row="2"
                Style="{StaticResource ExplanationBorderStyle}"
                Visibility="{Binding ShowExplanations, Converter={StaticResource BooleanToVisibilityConverter}}"
                Margin="5,0,5,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Explication :"
                           FontWeight="Bold"
                           Margin="0,0,0,5" />

                <TextBlock Grid.Row="1"
                           Text="{Binding SelectedSuggestion.Explanation}"
                           TextWrapping="Wrap"
                           FontStyle="Italic" />
            </Grid>
        </Border>

        <!-- Liste détaillée de toutes les suggestions -->
        <GroupBox Grid.Row="3"
                  Header="Toutes les suggestions"
                  Margin="5"
                  Visibility="{Binding ShowExplanations, Converter={StaticResource BooleanToVisibilityConverter}}">
            <DataGrid ItemsSource="{Binding Suggestions}"
                      SelectedItem="{Binding SelectedSuggestion}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      MaxHeight="300"
                      Margin="5">
                <DataGrid.Columns>
                    <!-- Score -->
                    <DataGridTextColumn Header="Score"
                                        Binding="{Binding RelevanceScore, StringFormat='{}{0:F1}'}"
                                        Width="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Symbole -->
                    <DataGridTextColumn Header="Symbole"
                                        Binding="{Binding Unit}"
                                        Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Nom -->
                    <DataGridTextColumn Header="Nom"
                                        Binding="{Binding Unit.Name}"
                                        Width="150" />

                    <!-- Système -->
                    <DataGridTextColumn Header="Système"
                                        Binding="{Binding Unit.UnitSystem}"
                                        Width="80" />

                    <!-- Explication -->
                    <DataGridTextColumn Header="Explication"
                                        Binding="{Binding Explanation}"
                                        Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap" />
                                <Setter Property="FontStyle" Value="Italic" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E6F0FF" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>