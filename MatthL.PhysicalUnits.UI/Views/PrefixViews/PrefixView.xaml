<UserControl x:Class="MatthL.PhysicalUnits.UI.Views.PrefixViews.PrefixView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:MatthL.PhysicalUnits.UI.Converters">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MatthL.WPF.Essentials.Styles;component/StyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        <converters:PrefixToDisplayConverter x:Key="PrefixDisplayConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Button x:Name="MainButton"
            Padding="8,4"
            MinWidth="70"
            Click="MainButton_Click"
            ToolTip="{Binding Prefix, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource PrefixDisplayConverter}, ConverterParameter=Name}">

        <Button.Style>
            <Style TargetType="Button">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="LightGray"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Cursor" Value="Hand"/>

                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F0F0F0"/>
                        <Setter Property="BorderBrush" Value="Gray"/>
                    </Trigger>

                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                        <Setter Property="Background" Value="#0078D4"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#0078D4"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </DataTrigger>

                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                            <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True"/>
                        </MultiDataTrigger.Conditions>
                        <Setter Property="Background" Value="#005A9E"/>
                        <Setter Property="BorderBrush" Value="#005A9E"/>
                    </MultiDataTrigger>
                </Style.Triggers>
            </Style>
        </Button.Style>

        <TextBlock Text="{Binding Prefix, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource PrefixDisplayConverter}}" 
                  Style="{StaticResource BaseTextBlock}"
                   TextAlignment="Center"/>
    </Button>
</UserControl>