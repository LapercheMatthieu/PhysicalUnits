<UserControl x:Class=" PhysicalUnitManagement.Views.UnitSystemSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace: PhysicalUnitManagement.Views" xmlns:popups="clr-namespace:NexusAIO.Tools.StandardControls.Popups;assembly= UI.BaseControls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:boolean="clr-namespace: UI.Converters.Boolean;assembly= UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="SelfRoot">
    <UserControl.Resources>
        <ResourceDictionary>
            <DropShadowEffect x:Key="DropShadowEffect" 
              ShadowDepth="3" 
              Direction="315" 
              Color="Black" 
              Opacity="0.3" 
              BlurRadius="5"/>
            <boolean:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ UI.Styles;component/StyleDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
        
    </UserControl.Resources>
    
    <Grid>
        <Button x:Name="UnitButton" 
         Click="UnitButton_Click"
         ToolTip="{Binding UnitTooltip}"
         Padding="8,2"
         Style="{StaticResource RoundedButtonStyle}">
            <iconPacks:PackIconFileIcons Kind="Config" />
        </Button>
        <popups:SmartPopup  
            IsOpen="{Binding IsPopupOpen, ElementName=SelfRoot, Mode=TwoWay}"  
            PlacementTarget="{Binding ElementName=UnitButton}" 
            TargetControl="{Binding ElementName=UnitButton}" >
            
            <Border Style="{StaticResource LightTitledPanelStyle}"
                Background="{StaticResource BackgroundBrush.LightGray}"
                CornerRadius="3" 
                Padding="5" 
           
    Effect="{StaticResource DropShadowEffect}"> 
                <UniformGrid Columns="1">
                    <Button Content="Close" Click="Button_Click"/>
                    <CheckBox IsChecked="{Binding ShowMetrics , ElementName=SelfRoot, Mode=TwoWay}" Content="Métrique"/>
                    <CheckBox IsChecked="{Binding ShowImperial, ElementName=SelfRoot, Mode=TwoWay}" Content="Impérial"/>
                    <CheckBox IsChecked="{Binding ShowUS, ElementName=SelfRoot, Mode=TwoWay}" Content="US"/>
                    <CheckBox IsChecked="{Binding ShowAstronomic, ElementName=SelfRoot, Mode=TwoWay}" Content="Astronomique"/>
                    <CheckBox IsChecked="{Binding ShowOther, ElementName=SelfRoot, Mode=TwoWay}" Content="Autres"/>
                </UniformGrid>
            </Border>
        </popups:SmartPopup>
        
    </Grid>
</UserControl>
