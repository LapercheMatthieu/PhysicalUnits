<UserControl x:Class="MatthL.PhysicalUnits.Demo.PhysicalUnitDemoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:physicalunitbuilderbuttonviews="clr-namespace:MatthL.PhysicalUnits.UI.ViewsButtons.PhysicalUnitBuilderButtonViews;assembly=MatthL.PhysicalUnits.UI" xmlns:physicalunitequationresultbuttonviews="clr-namespace:MatthL.PhysicalUnits.UI.ViewsButtons.PhysicalUnitEquationResultButtonViews;assembly=MatthL.PhysicalUnits.UI" xmlns:specificunitselectorviews="clr-namespace:MatthL.PhysicalUnits.UI.ViewsButtons.SpecificUnitSelectorViews;assembly=MatthL.PhysicalUnits.UI"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000" x:Name="TestRoot">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MatthL.WPF.Essentials.Styles;component/StyleDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Styles locaux -->
            <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="#2053C4" />
                <Setter Property="Margin" Value="0,10,0,5" />
            </Style>

            <Style x:Key="LabelTextStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Margin" Value="5,0,10,0" />
            </Style>

            <Style x:Key="ResultTextStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Consolas" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Background" Value="#F0F0F0" />
                <Setter Property="Padding" Value="5" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
                <Setter Property="Padding" Value="5" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="MinWidth" Value="100" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20" d:Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button Content="Refresh" HorizontalAlignment="Left" Click="Button_Click" />
            <!-- Titre principal -->
            <TextBlock Grid.Row="0" Text="Physical Unit Management Demo"
                       FontSize="24" FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,20" />

            <!-- Section 1: Première unité -->
            <TextBlock Grid.Row="1" Text="Unité 1 - Conversion vers SI"
                       Style="{StaticResource HeaderTextStyle}" />

            <Border Grid.Row="2" BorderBrush="#DDDDDD" BorderThickness="1"
                    CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Valeur:"
                               Style="{StaticResource LabelTextStyle}" />
                    <TextBox Grid.Column="1" Text="{Binding Value1, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}" />

                    <TextBlock Grid.Column="2" Text="Unité:"
                               Style="{StaticResource LabelTextStyle}" />
                    <physicalunitbuilderbuttonviews:PhysicalUnitBuilderButtonView Grid.Column="3"
                                               SelectedUnit="{Binding Unit1, ElementName=TestRoot, Mode=TwoWay, TargetNullValue={x:Null}}"
                                               Margin="5,0" />

                    <TextBlock Grid.Column="4" Text="Valeur SI:"
                               Style="{StaticResource LabelTextStyle}" />
                    <TextBlock Grid.Column="5" Text="{Binding Value1InSI, StringFormat='{}{0:G6}'}"
                               Style="{StaticResource ResultTextStyle}" />

                    <TextBlock Grid.Column="6" Text="unité SI:"
                               Style="{StaticResource LabelTextStyle}" />
                    <TextBlock Grid.Column="7" Text="{Binding Unit1InSI}"
                               Style="{StaticResource ResultTextStyle}" />
                </Grid>
            </Border>

            <!-- Section 2: Deuxième unité -->
            <TextBlock Grid.Row="3" Text="Unité 2 - Conversion vers SI"
                       Style="{StaticResource HeaderTextStyle}" />

            <Border Grid.Row="4" BorderBrush="#DDDDDD" BorderThickness="1"
                    CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Valeur:"
                               Style="{StaticResource LabelTextStyle}" />
                    <TextBox Grid.Column="1" Text="{Binding Value2, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputTextBoxStyle}" />

                    <TextBlock Grid.Column="2" Text="Unité:"
                               Style="{StaticResource LabelTextStyle}" />
                    <physicalunitbuilderbuttonviews:PhysicalUnitBuilderButtonView Grid.Column="3"
                                               SelectedUnit="{Binding Unit2, ElementName=TestRoot, Mode=TwoWay}"
                                               Margin="5,0" />

                    <TextBlock Grid.Column="4" Text="Valeur SI:"
                               Style="{StaticResource LabelTextStyle}" />
                    <TextBlock Grid.Column="5" Text="{Binding Value2InSI, StringFormat='{}{0:G6}'}"
                               Style="{StaticResource ResultTextStyle}" />
                    <TextBlock Grid.Column="6" Text="unité SI:"
                               Style="{StaticResource LabelTextStyle}" />
                    <TextBlock Grid.Column="7" Text="{Binding Unit2InSI}"
                               Style="{StaticResource ResultTextStyle}" />
                </Grid>
            </Border>

            <!-- Section 3: Conversion entre unités -->
            <TextBlock Grid.Row="5" Text="Conversion vers une unité cible"
                       Style="{StaticResource HeaderTextStyle}" />

            <Border Grid.Row="6" BorderBrush="#DDDDDD" BorderThickness="1"
                    CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Sélection de l'unité cible -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Unité cible:"
                                   Style="{StaticResource LabelTextStyle}" />
                        <physicalunitbuilderbuttonviews:PhysicalUnitBuilderButtonView Grid.Column="1"
                                                   SelectedUnit="{Binding TargetUnit, ElementName=TestRoot, Mode=TwoWay}"
                                                    UnitToConvert="{Binding Unit1, ElementName=TestRoot, Mode=OneWay}"
                                                    IsOnlyConvertion="True"
                                                   Margin="5,0" />
                    </Grid>

                    <!-- Résultats de conversion -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="200" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Unité 1 convertie:"
                                   Style="{StaticResource LabelTextStyle}" />
                        <TextBlock Grid.Column="1" Text="{Binding ConvertedValue1, StringFormat='{}{0:G6}'}"
                                   Style="{StaticResource ResultTextStyle}" />

                        <TextBlock Grid.Column="3" Text="Unité 2 convertie:"
                                   Style="{StaticResource LabelTextStyle}" />
                        <TextBlock Grid.Column="4" Text="{Binding ConvertedValue2, StringFormat='{}{0:G6}'}"
                                   Style="{StaticResource ResultTextStyle}" />
                    </Grid>
                </Grid>
            </Border>

            <!-- Section 4: Opération avec exposants -->
            <TextBlock Grid.Row="7" Text="Opération avec exposants"
                       Style="{StaticResource HeaderTextStyle}" />

            <Border Grid.Row="8" BorderBrush="#DDDDDD" BorderThickness="1"
                    CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="10" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Saisie des exposants -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Exposant unité 1:"
                                   Style="{StaticResource LabelTextStyle}" />
                        <TextBox Grid.Column="1" Text="{Binding Exponent1, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 ToolTip="Format: entier ou fraction (ex: 2 ou 1/2)" />

                        <TextBlock Grid.Column="3" Text="Exposant unité 2:"
                                   Style="{StaticResource LabelTextStyle}" />
                        <TextBox Grid.Column="4" Text="{Binding Exponent2, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 ToolTip="Format: entier ou fraction (ex: -1 ou 3/2)" />

                        <TextBlock Grid.Column="6" Text="(Unité1^exp1 × Unité2^exp2)"
                                   FontStyle="Italic" VerticalAlignment="Center"
                                   Margin="10,0,0,0" />
                    </Grid>

                    <!-- Bouton équation -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="300" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Résultat équation:"
                                   Style="{StaticResource LabelTextStyle}" />
                        <physicalunitequationresultbuttonviews:PhysicalUnitEquationResultButtonView Grid.Column="1"
                                                           EquationTerms="{Binding EquationTerms, ElementName=TestRoot}"
                                                           SelectedUnit="{Binding EquationResultUnit, ElementName=TestRoot, Mode=TwoWay}"
                                                           MaxSuggestions="20"
                                                           Margin="5,0" />

                        <StackPanel Grid.Column="2" Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Content="Réinitialiser"
                                    Click="ResetButton_Click"
                                    Padding="10,5"
                                    Margin="5,0"
                                    Style="{StaticResource RoundedButtonStyle}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            <UniformGrid Grid.Row="9" Rows="1">
                <specificunitselectorviews:SpecificUnitSelectorView Category="Electric" />
                <specificunitselectorviews:SpecificUnitSelectorView Category="Time" />
            </UniformGrid>
        </Grid>
    </ScrollViewer>
</UserControl>